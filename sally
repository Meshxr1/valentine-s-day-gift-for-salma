        /* Interactive Hearts */
        .heart { position: fixed; font-size: 20px; pointer-events: none; animation: float 3s linear forwards; z-index: 999; }
        @keyframes float { to { transform: translateY(-100vh) rotate(360deg); opacity: 0; } }

        /* Sections */
        .section { height: 100vh; display: flex; flex-direction: column; justify-content: center; align-items: center; text-align: center; padding: 20px; }
